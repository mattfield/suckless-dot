#!/bin/sh

case "$1" in
    left)
        xrandr --output HDMI-2 --primary --auto --output eDP-1 --auto --right-of HDMI-2;;
    right)
        xrandr --output HDMI-2 --primary --auto --output eDP-1 --auto --left-of HDMI-2;;
    dup)
        xrandr --output HDMI-2 --same-as eDP-1 --output eDP-1 --primary;;
    screen)
        xrandr --output HDMI-2 --primary --auto --output eDP-1 --off;;
    laptop)
        xrandr --output eDP-1 --primary --auto --output HDMI-2 --off;;
    list)
        xrandr | grep '\<connected\>' | cut -d\  -f1;;
    *) echo `basename $0` '{left|right|dup|screen|laptop|list}';;
esac
